# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=false
separator_block_width=0

[wifi]
command=/home/matt/local/bin/i3blocks/wifi
interval=10
align=right

[music]
command=/home/matt/local/bin/i3blocks/audio
interval=1
min_width=65
align=center

[battery]
command=/home/matt/local/bin/i3blocks/battery
interval=10
min_width=50
align=center

[time]
command=date '+%A,  %B %d  %H:%M'
interval=1
min_width=200
align=center
